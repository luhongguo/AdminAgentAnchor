<?xml version="1.0" encoding="utf-8"?>
<appSettings>
  <!-- DBType  SQLServer,MySQL,SQLite,Oracle -->
  <add key="DBType" value="MySQL"/>
  <!-- Sql Server Connection string /-->
  <!--SQLServer-->
  <add key="SQLServerConnString" value="Data Source=127.0.0.1;Initial Catalog=elight;User ID=sa;Password=123456;" />
  <!--MySQL-->
  <add key="MySQLConnString" value="server=127.0.0.1;Database=Elight;Uid=root;Pwd=root;" />
  <!--SQLite-->
  <add key="SQLiteConnString" value="DataSource=|DataDirectory|SQLite\db.sqlite;" />
  <!--Oracle-->
  <add key="OracleConnString" value="Data Source=192.168.1.3/ORCL;User ID=elight;Password=123456;" />
  <!-- 是否使用Redis -->
  <add key="RedisCache" value="false" />
  <!-- Redis配置 -->
  <add key="RedisHost" value="127.0.0.1" />
  <add key="RedisPort" value="6379" />

  <!-- 软件名称 -->
  <add key="SoftwareName" value="Elight.MVC" />
  <!-- 用户登录信息保存模式：Session、Cookie -->
  <add key="LoginProvider" value="Session" />
  <!-- 用户登录信息保存时间（单位：分钟）-->
  <add key="LoginTimeout" value="120" />
  <add key="webpages:Version" value="2.0.0.0"/>
  <add key="webpages:Enabled" value="false"/>
  <add key="PreserveLoginUrl" value="true"/>
  <add key="ClientValidationEnabled" value="true"/>
  <add key="UnobtrusiveJavaScriptEnabled" value="true"/>
</appSettings>